{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es2022",
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",

    "paths": {
      "@root/*": ["src/*"],
      "@test/*": ["test/*"],
      "@test-helper/*": ["test-helper/*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
